                        <ContentPresenter Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left"/>

                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter Property="Foreground" Value="#90BEE4"/>
                            <Setter TargetName="border" Property="BorderThickness" Value="1.5"/>
                            <Setter TargetName="border" Property="Background" >
                                <Setter.Value>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#122132" Offset="0"/>
                                        <GradientStop Color="#314E77" Offset="1"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="GroupBox" x:Key="GroupBoxStyle">
        <Setter Property="Margin" Value="10"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="GroupBox">
                    <Border BorderThickness="0.5" BorderBrush="#1FDCF5" CornerRadius="10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <!--分割线-->
                            <Border Height="0.5" Background="#1FDCF5" VerticalAlignment="Bottom"/>
                            <!--小圆球-->
                            <Ellipse Height="7" Width="7" Fill="Orange" HorizontalAlignment="Left" Margin="10 0"/>

                            <!--光斑-->

                            <Border Height="8"  VerticalAlignment="Top" Margin="0 -4 0 0">
                                <Border.Background>
                                    <RadialGradientBrush >
                                        <GradientStop Color="#1FDCF5" Offset="0"/>
                                        <GradientStop Color="Transparent" Offset="0.5"/>
                                    </RadialGradientBrush>
                                </Border.Background>
                            </Border>


                            <Border Height="8" Grid.Row="1" VerticalAlignment="Bottom" Margin="0 0 0 -4">
                                <Border.Background>
                                    <RadialGradientBrush >
                                        <GradientStop Color="#1FDCF5" Offset="0"/>
                                        <GradientStop Color="Transparent" Offset="0.5"/>
                                    </RadialGradientBrush>
                                </Border.Background>
                            </Border>
                            <!--第一行-->
                            <ContentPresenter ContentSource="Header" VerticalAlignment="Center" TextBlock.Foreground="#1FDCF5" Margin="25,0" TextBlock.FontFamily="{StaticResource Dingding}"/>
                            <!--第二行-->
                            <ContentPresenter  Grid.Row="1"/>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="Button" x:Key="WarnButton">
        <Setter Property="Background" Value="#FFB71F14"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Path Data="M10 0 0 0 0 10" Stroke="#9f90" StrokeThickness="1"/>
                        <Path Data="M0 0 10 0 10 10" Stroke="#9F90" StrokeThickness="1" HorizontalAlignment="Right"/>
                        <Path Data="M0 0 0 10 10 10" Stroke="#9F90" StrokeThickness="1" VerticalAlignment="Bottom" />
                        <Path Data="M0 10 10 10 10 0" Stroke="#9F90" StrokeThickness="1" VerticalAlignment="Bottom" HorizontalAlignment="Right"/>
                        <Border Background="{TemplateBinding Background}" Margin="3">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#9f00"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="False">
                            <Setter Property="Background" Value="#6f00"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>