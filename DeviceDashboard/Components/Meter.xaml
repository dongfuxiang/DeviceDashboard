<UserControl x:Class="DeviceDashboard.Components.Meter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DeviceDashboard.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <!--放刻度信息-->
        <Canvas x:Name="canvas"/>
        <Path x:Name="path_back" Stroke="#32FFFFFF"  StrokeThickness="5"/>
        <Path x:Name="path_value" Stroke="#1FDCF5" StrokeThickness="5"/>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"  Margin="0 20 0 0">
            <TextBlock Text="{Binding Value,RelativeSource={RelativeSource AncestorType=UserControl}}"
                       Foreground="#1FDCF5"
                       FontSize="26"
                       FontFamily="{StaticResource Dingding}"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="{Binding Unit,RelativeSource={RelativeSource AncestorType=UserControl}}" 
                       Foreground="#3FFF" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
